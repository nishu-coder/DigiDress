<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MeasurementActivity">

    <TextView
        android:id="@+id/measurment_body"
        android:layout_width="364dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Measurment Body Parts"
        android:textAlignment="center"
        android:textColor="@color/heading_dark"
        android:textSize="30dp"
        android:textStyle="bold"

        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="530dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/body_parts_name"
            android:layout_width="200dp"
            android:layout_height="530dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="117dp">


            <TextView
                android:id="@+id/neck_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="Neck"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sholder_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="Shoulder"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arm_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="Arm"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/chest_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:text="Chest"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wrist_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="wrist"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hand_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="Hand"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/stomach_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="stomach"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/waist_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:text="Waist"
                android:paddingTop="5dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/thai_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="Thigh"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/leg_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:paddingTop="5dp"
                android:text="Leg"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/foot_text"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:paddingTop="5dp"
                android:text="Foot"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_page_btn"
            android:layout_width="210dp"
            android:layout_height="530dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="117dp">

            <EditText
                android:id="@+id/neck_input"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:textColorHint="@color/gray"
                />
            <EditText
                android:id="@+id/sholder_input"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
                android:textColorHint="@color/gray"
                />
            <EditText
                android:id="@+id/arm_input"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
                android:textColorHint="@color/gray"
                />
            <EditText
                android:id="@+id/chest_input"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
            android:textColorHint="@color/gray"
            />

            <EditText
                android:id="@+id/wrist_input"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
            android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
            android:textColorHint="@color/gray"
            />

            <EditText
                android:id="@+id/hand_input"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
            android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
            android:textColorHint="@color/gray"
            />
            <EditText
                android:id="@+id/stomach_input"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
                android:textColorHint="@color/gray"
                />

            <EditText
                android:id="@+id/waist_input"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/measurment_input_background"
                android:inputType="number"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="20dp" />



            <EditText
                android:id="@+id/thigh_input"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
            android:textColor="@color/black"

            android:textColorHint="@color/gray"
            />
            <EditText
                android:id="@+id/leg_input"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
                android:textColorHint="@color/gray"
                />

            <EditText
                android:id="@+id/foot_input"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20dp"
                android:paddingTop="5dp"
                android:layout_marginTop="5dp"
            android:textColor="@color/black"
                android:backgroundTint="@color/measurment_input_background"
            android:textColorHint="@color/gray"
            />

        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/next3_party"
        android:layout_width="112dp"
        android:layout_height="59dp"
        android:backgroundTint="@color/gray"
        android:text="Done"
        android:textColor="@color/shine_blue"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="192dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:alpha="100"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.995"
        tools:ignore="InvalidId" />
</androidx.constraintlayout.widget.ConstraintLayout>